<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/delete_r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/delete_button_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/back"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/delete_r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_r1">
        <ExpandableListView
            android:id="@+id/delete_list_memo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:childDivider="#AAAAAA" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentBottom="true">
        <CheckBox
            android:id="@+id/delete_select_all"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="全选" />
        <Button
            android:id="@+id/delete_delete"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"
            android:text="删除"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>


